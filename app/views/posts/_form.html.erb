<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.cktext_area :description %>
  </div>
  <div class="field">
    Upload your sample images (Ctrl or Shift select to upload multiple images)<br>
    <%= f.file_field :imgs, multiple: true %>
  </div>
  <div class="field">
    Your property's kind of object (described in tags)<br>
    <%= f.select :tag_have, options_for_select(@all_tag.map{|p| [p.title, p.id]}), {}, {class:  'tags form-control', multiple: "multiple"} %>
  </div>
  <div class="field">
    Your expectation's kind of object (described in tags)<br>
    <%= f.select :tag_want, options_for_select(@all_tag.map{|p| [p.title, p.id]}), {}, {class:  'tags form-control', multiple: "multiple"} %>
  </div>
  <div class="actions"><br>
    <%= f.submit 'Create new trade', :class => 'btn btn-primary' %>
  </div>
<% end %>
